require 'spec_helper'

describe User do

  before(:each) do
    @attr = { :name => "Example User", :email => "user@example.com"}
  end

  it "should create a new valid instance" do
    User.create!(@attr)
  end

  it "should require a name" do
    no_name_user = User.new(@attr.merge( :name => "" ))
  
  end
end
